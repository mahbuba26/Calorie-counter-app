<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tre"
    android:id="@+id/drawer_layout"
    tools:context=".FoodActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/tre"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tre"
                >

                <include layout="@layout/main_toolbar" />

                <TextView
                    android:id="@+id/calories"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="147dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#e4260e"
                    android:textSize="30sp" />



                <EditText
                    android:id="@+id/etquantity"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/calthis"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginBottom="16dp"
                    android:ems="10"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:textColor="#ff0000"
                    android:textColorHint="#4888A5"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/Food_cal"
                    android:layout_width="367dp"
                    android:layout_height="60dp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="33dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:text="Food Calories"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/calthis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="296dp"
                    android:background="#1732e7"
                    android:textSize="14dp"
                    android:text="Calories for this food"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/calculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/calories"
                    android:layout_marginStart="51dp"
                    android:layout_marginLeft="51dp"
                    android:layout_marginBottom="58dp"
                    android:layout_toEndOf="@+id/calthis"
                    android:layout_toRightOf="@+id/calthis"
                    android:background="#1732e7"
                    android:text="total Calories"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="206dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@+id/textView"
                    android:layout_toEndOf="@+id/calthis"
                    android:layout_toRightOf="@+id/calthis" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Food Item"
                    android:textColor="#020e51"
                    android:textSize="25sp"
                    android:layout_above="@+id/etquantity"
                    android:layout_alignRight="@+id/add"
                    android:layout_alignEnd="@+id/add"
                    android:layout_marginBottom="13dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="260dp"
                    android:layout_height="53dp"
                    android:layout_alignBaseline="@+id/etquantity"
                    android:layout_alignStart="@+id/calculate"
                    android:layout_alignLeft="@+id/calculate"
                    android:layout_alignBottom="@+id/etquantity"
                    android:layout_marginStart="-50dp"
                    android:layout_marginLeft="-50dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="16sp"
                    android:paddingRight="16sp"
                    android:text="*Measure considered accordingly"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="177dp"
                    android:layout_height="183dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="107dp"
                    android:layout_marginLeft="107dp"
                    android:layout_marginTop="134dp"
                    android:layout_marginEnd="125dp"
                    android:layout_marginRight="125dp"
                    android:layout_marginBottom="489dp"
                    app:srcCompat="@drawable/icon" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="373dp"
                    android:layout_height="46dp"
                    android:layout_above="@+id/calories"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="515dp"
                    android:layout_marginEnd="31dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:text='Please select the "CALORIES FOR THIS FOOD " for eaten items and  then choose "TOTAL CALORIES"'
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/yh">

        <include
            layout="@layout/main_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>