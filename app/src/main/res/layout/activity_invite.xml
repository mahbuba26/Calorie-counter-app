<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".InviteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tre"

                android:gravity="center"
                android:orientation="vertical">

                <include
                    layout="@layout/main_toolbar"/>


                <TextView
                    android:id="@+id/txtBmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="65dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="53dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginRight="72dp"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Invite friends !"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="33dp"
                    android:layout_marginBottom="320dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Enter a message"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="104dp"
                    android:layout_marginTop="445dp"
                    android:layout_marginEnd="109dp"
                    android:layout_marginBottom="228dp"
                    android:background="@color/colorAccent"
                    android:onClick="onSendMessage"
                    android:text="Send message" />

                <androidx.cardview.widget.CardView
                    android:layout_width="410dp"
                    android:layout_height="205dp"
                    android:layout_below="@+id/txtBmr"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="125dp"
                    android:layout_marginBottom="401dp"
                    android:background="@color/colorAccent"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/a"
                        android:layout_width="match_parent"
                        android:layout_height="205dp"
                        android:background="@drawable/mmm9">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="183dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="75dp"
                            android:layout_marginLeft="75dp"
                            android:layout_marginEnd="75dp"
                            android:layout_marginRight="75dp"
                            android:layout_marginBottom="11dp"
                            android:background="@color/primary_li"
                            android:gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/no1" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/yh">

        <include
            layout="@layout/main_nav_drawer"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>


